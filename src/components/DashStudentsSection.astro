---
const { title, testimonials } = Astro.props
---

<section class="bs-container bs-mt-lg">

  { title && <h2 class="bs-h2 text-center md:text-left">{ title }</h2> }

  <div class="group bs-mt-md grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

    { testimonials.map(item =>
      <blockquote
        class="overflow-hidden rounded-2xl shadow-lg transition-all hover:scale-105 duration-300">

        <img 
          src={item.image} 
          alt="Testimonio" 
          class="w-full h-auto max-h-[500px] object-contain rounded-xl bg-white"
        />

      </blockquote>
    )}

  </div>

</section>